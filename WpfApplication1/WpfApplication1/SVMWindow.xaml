        </Menu>
        <Grid>
        	<MediaElement x:Name="m" Height="249" VerticalAlignment="Top" Width="293"/>
            <Canvas x:Name="canvas" Background="Transparent"/>
        </Grid>
    </DockPanel>
</Window>
